{% extends 'base.html.twig' %}

{% block title %}Tentacode â€” {{ post.content.title }}{% endblock %}

{% block meta_description -%}
    {{ post.content.excerpt(400) }}
{%- endblock %}

{% block meta_og_url -%}
    http://tentacode.net{{ path('post', {'slug': post.slug}) }}
{%- endblock %}

{% block content %}
    <article class="post-content__post">
        <header class="post__header">
            <time class="post__time" datetime="{{ post.date|date('Y-m-d') }}">
                <span class="time_large">
                    {{ post.date|date('j') }}
                    <sup>{{ post.date|date('S') }}</sup>
                </span> {{ post.date|date('F') }}, {{ post.date|date('Y') }}
            </time>
            <h1 class="post__title">{{ post.content.title }}</h1>
            <div class="single-post__content">
                {{ post.content.body|raw }}
            </div>
        </header>
    </article>
{% endblock %}
